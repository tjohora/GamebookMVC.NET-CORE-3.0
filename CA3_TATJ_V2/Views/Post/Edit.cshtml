@model CA3_TATJ_V2.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit your Post!</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="postId" />
            <div class="form-group">
                <input type="hidden" asp-for="userName" class="form-control" value="@User.Identity.Name" />
            </div>
            <div class="form-group">
                <label asp-for="postHeader" class="control-label"></label>
                <input asp-for="postHeader" class="form-control" />
                <span asp-validation-for="postHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postContent" class="control-label"></label>
                <textarea asp-for="postContent" class="form-control"></textarea>
                <span asp-validation-for="postContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="postDate" class="form-control" id="date" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

